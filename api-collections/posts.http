  "content": "Now includes Redis Streams and Pub/Sub examples for real-time messaging.",
  "categoryId": "c275dde6-9177-418b-ac7e-428023b72e8b",
  "tagIds": [
    "e446b1d3-60aa-49c7-a66c-d60aab0a07a2"
  ],
  "status": "PUBLISHED"
}

### delete a post by ID
DELETE {{host}}/api/v1/posts/{{postId}}
Authorization: Bearer {{token}}
