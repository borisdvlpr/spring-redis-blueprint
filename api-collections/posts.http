@postId = 62644658-652b-4136-ba3a-8a1e5a8c2d6c

### get all posts
GET {{host}}/api/v1/posts
# optional: ?categoryId={{categoryId}}&tagId={{tagId}}
Accept: application/json

### get a specific post by ID
GET {{host}}/api/v1/posts/{{postId}}

### get drafts for logged-in user
# requires userId RequestAttribute
GET {{host}}/api/v1/posts/drafts
Content-Type: application/json
Authorization: Bearer {{token}}

### create a new post
# constraints: title(3-100), content(50-50000), max 10 tags
POST {{host}}/api/v1/posts
Content-Type: application/json
Authorization: Bearer {{token}}

{
  "title": "Spring Boot Redis Blueprint",
  "content": "Comprehensive guide on how to integrate Spring Boot with Redis for high-performance applications. Covers caching, session management, and more.",
  "categoryId": "c275dde6-9177-418b-ac7e-428023b72e8b",
  "tagIds": [
    "fb902164-8b96-491f-b46e-69671038d4e2",
    "15fc52da-53e8-469d-9f54-fcb808dacb21"
  ],
  "status": "DRAFT"
}

### update an existing post
# constraints: id(required), title(3-200), content(10-50000)
PUT {{host}}/api/v1/posts/{{postId}}
Content-Type: application/json
Authorization: Bearer {{token}}

{
  "id": "4ea6584d-0fb3-4d0b-af90-f311045313c5",
